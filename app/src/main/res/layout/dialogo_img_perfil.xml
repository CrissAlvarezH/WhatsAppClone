<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/dialogo_img"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagen_perfil_vacia" />

    <TextView
        android:id="@+id/dialogo_txt_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/dialogo_img"
        android:background="@color/negro_semitrasparente"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Nombre Contacto"
        android:textColor="@color/blanco"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/dialogo_img"
        android:layout_below="@id/dialogo_img"
        android:background="@color/blanco"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialogo_img_chat"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_chat_accent" />

        <ImageView
            android:id="@+id/dialogo_img_info"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_info_accent" />

    </LinearLayout>

</RelativeLayout>