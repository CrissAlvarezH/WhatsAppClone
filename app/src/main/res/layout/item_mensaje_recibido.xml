<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_contenedor_mensaje"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="left"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#a0b9f593"
            android:gravity="bottom"
            android:id="@+id/layout_mensaje"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--  CUERPO MENSAJE -->
            <TextView
                android:maxWidth="230dp"
                android:id="@+id/item_txt_cuerpo_msj"
                android:textSize="16dp"
                android:textColor="@color/negro"
                android:text="Mensaje de prueba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- HORA -->
            <TextView
                android:id="@+id/item_txt_hora_msj"
                android:paddingLeft="10dp"
                android:text="12:30 AM"
                android:textSize="12sp"
                android:textColor="@color/gris_oscuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>